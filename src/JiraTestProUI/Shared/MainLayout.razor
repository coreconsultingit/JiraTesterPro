@using MudBlazor
@using Color = MudBlazor.Color
@using JiraTestProUI.Shared
@inherits MainLayoutBase
<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="0" Style="background-image: linear-gradient(180deg, #4b0f41, grey);">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        @*<MudIconButton Icon="@Icons.Custom.Brands.MudBlazor" Color="Color.Inherit" Link="https://mudblazor.com/" Target="_blank" />
        <MudIconButton Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Link="https://github.com/MudBlazor/MudBlazor/" Target="_blank" />*@
        <MudText Class="d-flex align-end">Welcome @System.Security.Principal.WindowsIdentity.GetCurrent().Name</MudText>
        <MudIconButton Icon="@Icons.Filled.Lightbulb" Color="MudBlazor.Color.Inherit" OnClick="()=>DownLoadUserManual()" />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="1" Style="background-image: linear-gradient(180deg, #4b0f41, grey);">
        <MudDrawerHeader Style="color:white">
            <MudIcon Icon="@Icons.Filled.Analytics" Color="MudBlazor.Color.Inherit" />
            <MudText Typo="Typo.h5" Style="font-family:'Brush Script MT'">JiraAutomation</MudText>
        </MudDrawerHeader>
        <MudDrawer></MudDrawer>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-16 pt-16">
            <MudOverlay @bind-Visible="isVisible" DarkBackground="true" AutoClose="true" Style="height: 500px;">
                <MudPaper Square="true">
                    
                    <MudList>
                        <MudListSubheader>
                            <MudText Typo="Typo.h6">
                                Common setup Questions
                            </MudText>
                
                        </MudListSubheader>

                    </MudList>
                    <MudListItem Icon="@Icons.Material.Filled.StarRate">
                        <MudAlert Severity="Severity.Info">
                            <MudText>What is Headless mode and how do I enable it?</MudText>
                            <MudText> If Headlessmode is enabled then browser will run in background and you can work on other stuff at same time. You can enable it by changing <MudChip Color="Color.Primary">EnableHeadlessMode</MudChip>
                                in <MudChip Color="Color.Primary">appsettings.json</MudChip> file to true
                            </MudText>
                        </MudAlert>
                    </MudListItem>
                    
                    <MudListItem Icon="@Icons.Material.Filled.StarRate">
                        <MudAlert Severity="Severity.Info">
                            <MudText>Not Supported features</MudText>
                            <MudText> attachment/File Upload
                            </MudText>
                        </MudAlert>
                    </MudListItem>
                   
                </MudPaper>



            </MudOverlay>
            
<Error>
            @Body
            </Error>
        </MudContainer>
    </MudMainContent>
</MudLayout>
